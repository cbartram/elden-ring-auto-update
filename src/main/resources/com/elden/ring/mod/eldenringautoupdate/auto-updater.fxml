<VBox alignment="CENTER" maxHeight="274.0" maxWidth="430.0" minHeight="210.0" minWidth="420.0" prefHeight="274.0" prefWidth="427.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.elden.ring.mod.eldenringautoupdate.AutoUpdaterController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <VBox prefHeight="220.0" prefWidth="430.0">
      <children>
      
              <Label fx:id="title" contentDisplay="CENTER" prefHeight="28.0" prefWidth="303.0" text="Elden Ring Coop Auto Updater" textAlignment="RIGHT">
            <font>
               <Font size="23.0" />
            </font>
            <VBox.margin>
               <Insets left="40.0" />
            </VBox.margin>
         </Label>
      </children>
   </VBox>
   <VBox prefHeight="71.0" prefWidth="387.0">
      <children>
         <Label fx:id="installLocationLabel" />
         <Button fx:id="selectInstallButton" mnemonicParsing="false" onAction="#onSelectInstallButtonClick" text="Select Elden Ring Install Location" textAlignment="CENTER">
            <VBox.margin>
               <Insets left="100.0" />
            </VBox.margin>
         </Button>
         <Separator prefWidth="200.0">
            <VBox.margin>
               <Insets bottom="10.0" top="10.0" />
            </VBox.margin>
         </Separator>
         <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
               <Label text="Select Coop Mod">
                  <HBox.margin>
                     <Insets right="10.0" top="5.0" />
                  </HBox.margin>
               </Label>
               <ChoiceBox fx:id="coopModSelector" prefHeight="26.0" prefWidth="267.0" />
            </children>
         </HBox>
         <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
               <CheckBox fx:id="makeAlias" mnemonicParsing="false" text="Make Exe Alias">
                  <HBox.margin>
                     <Insets top="10.0" />
                  </HBox.margin>
               </CheckBox>
            </children>
         </HBox>
      </children>
   </VBox>
   <Separator prefWidth="200.0" />
   <Button fx:id="installButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="162.0" text="Install" />
</VBox>
